<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.ForgeApp.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_expenses"
        android:name="com.example.ForgeApp.ExpensesFragment"
        android:label="Expenses"
        tools:layout="@layout/fragment_expenses" />

    <fragment
        android:id="@+id/navigation_categories"
        android:name="com.example.ForgeApp.CategoriesFragment"
        android:label="Categories"
        tools:layout="@layout/fragment_categories" />

    <fragment
        android:id="@+id/navigation_budget"
        android:name="com.example.ForgeApp.BudgetFragment"
        android:label="Budget"
        tools:layout="@layout/fragment_budget" />
    <!-- Add this action to your homeFragment -->
    <action
        android:id="@+id/action_homeFragment_to_expensesFragment"
        app:destination="@id/navigation_expenses" />
</navigation>